#!/usr/bin/env ruby
# frozen_string_literal: true

require "bundler/setup"
require "ruby_lox"

def run(source)
  output = RubyLox::Runner.new.run(source).to_s
  output.delete_suffix!(".0") if output.end_with?(".0")
  puts output
end

def runFile(path)
  run File.read(path)
end

def runPrompt
  print "> "
  while line = gets
    run line
    print "> "
  end
end

if (ARGV.length > 1)
  puts "Usage: bin/run [script]"
  exit(64)
elsif (ARGV.length == 1)
  runFile(ARGV[0])
else
  runPrompt()
end

